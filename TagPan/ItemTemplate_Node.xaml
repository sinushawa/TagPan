<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:TagPan">
	<HierarchicalDataTemplate x:Key="ItemTemplate_Node" ItemsSource="{Binding Children}">
		<Grid >
			<Grid.ToolTip>
				<ToolTip>
                    <ListView ItemsSource="{Binding Objects, Converter={local:IntToStringConverter}, ConverterParameter={0}}"/>
				</ToolTip>
			</Grid.ToolTip>
			<TextBlock HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Name}"/>
		</Grid>
	</HierarchicalDataTemplate>
	<!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>